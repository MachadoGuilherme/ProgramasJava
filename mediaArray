
package javaapplication1;
/**
 * @author Guilherme
 */
import java.util.Scanner;
import java.util.Calendar;

public class JavaApplication1 {

    public static void main(String[] args) {
        
        float[] nota=new float[3];
        String nome;
        Scanner entrada = new Scanner(System.in);
        
        System.out.print("Nome do aluno: ");
        nome=entrada.nextLine();
        
        System.out.printf("Primeira nota: ");
        nota[0]=entrada.nextFloat();
        
        System.out.printf("Segunda nota: ");
        nota[1]=entrada.nextFloat();
        
        nota[2]=(nota[0]+nota[1]/2);
        System.out.printf("Aluno: %s\nNotas: %.1f e %.1f\nSua media e: %.2f\n", nome, nota[0], nota[1], nota[2]);
        
    }
    
}
